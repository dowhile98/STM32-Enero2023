#include "stm32f4xx.h"


extern uint8_t state;
void TIM2_IRQHandler(void){
	if(TIM2->SR & TIM_SR_CC2IF){
		//todo
		switch(state){
		case 0:
			TIM2->CCR2 += 500 * 2;			//0.5seg
			break;
		case 1:
			TIM2->CCR2 += 1000 * 2;			//1SEG
			break;
		case 2:
			TIM2->CCR2 += 2000 * 2;			//2seg
			break;
		case 3:
			TIM2->CCR2 += 5000 * 2;
			break;
		}
	}
}
